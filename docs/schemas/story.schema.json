{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://forgotten-tides.com/schemas/story.schema.json",
  "title": "Story Schema",
  "description": "Schema for stories in The Forgotten Tides universe",
  "type": "object",
  "required": ["id", "canonical_id", "type", "summary_50", "summary_200", "cross_refs", "references"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^STORY-\\d{4}$",
      "description": "Story ID in format STORY-####"
    },
    "canonical_id": {
      "type": "string",
      "pattern": "^story-\\d{4}$",
      "description": "Canonical story ID in format story-####"
    },
    "schema_version": {
      "type": "string",
      "pattern": "^v?\\d+\\.\\d+\\.\\d+$",
      "description": "Schema version for this frontmatter"
    },
    "uuid": {
      "type": "string",
      "format": "uuid",
      "description": "Optional UUID for unique identification"
    },
    "type": {
      "type": "string",
      "enum": ["story"],
      "description": "Entity type"
    },
    "title": {
      "type": "string",
      "description": "Story title"
    },
    "status": {
      "type": "string",
      "enum": ["canonical", "speculative", "deprecated", "draft"],
      "description": "Canonical status of the story"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Optional tags for grouping or filtering"
    },
    "story_type": {
      "type": "string",
      "enum": ["short-story", "novel", "novella", "scene", "fragment"],
      "description": "Type of story"
    },
    "summary_50": {
      "type": "string",
      "maxLength": 220,
      "description": "Brief summary (≤ 220 characters)"
    },
    "summary_200": {
      "type": "string",
      "maxLength": 1200,
      "description": "Detailed summary (≤ 1200 characters)"
    },
    "cross_refs": {
      "type": "object",
      "description": "Cross-references to other entities",
      "properties": {
        "characters": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^char-\\d{4}$"
          }
        },
        "locations": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^loc-\\d{4}$"
          }
        },
        "factions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^fact-\\d{4}$"
          }
        },
        "mechanics": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^mech-\\d{4}$"
          }
        },
        "stories": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^story-\\d{4}$"
          }
        }
      },
      "additionalProperties": false
    },
    "references": {
      "type": "object",
      "description": "Canonical references to other entities",
      "properties": {
        "characters": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^char-\\d{4}$"
          }
        },
        "locations": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^loc-\\d{4}$"
          }
        },
        "factions": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^fact-\\d{4}$"
          }
        },
        "mechanics": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^mech-\\d{4}$"
          }
        },
        "stories": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^story-\\d{4}$"
          }
        }
      },
      "additionalProperties": false
    },
    "timeline": {
      "type": "object",
      "properties": {
        "setting": {
          "type": "string",
          "description": "When and where the story takes place"
        },
        "duration": {
          "type": "string",
          "description": "Duration of the story events"
        },
        "chronology": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "event": {
                "type": "string"
              },
              "timestamp": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "themes": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["memory-as-cost", "identity-erosion", "sacrifice", "conceptual-fragility", "quiet-heroism", "memory-preservation"]
      }
    },
    "continuity_notes": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Important continuity notes for this story"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "modified": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["canonical", "speculative", "deprecated", "draft"]
        },
        "word_count": {
          "type": "integer",
          "minimum": 0
        },
        "author": {
          "type": "string"
        }
      }
    }
  },
  "additionalProperties": false
}
